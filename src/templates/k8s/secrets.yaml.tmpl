apiVersion: v1
kind: Secret
metadata:
  name: {{ projectName }}-secret
  namespace: {{ projectName }}
type: Opaque
stringData:
  # Database connection
  DATABASE_URL: postgresql://user:password@localhost:5432/{{ projectName }}?sslmode=disable
  # Add your secrets here
  API_KEY: your-api-key-here
  JWT_SECRET: your-jwt-secret-here
